generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type WorkoutsExercises {
  name String
  reps Int
  sets Int
}

model users {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  age         Int
  email       String
  firstName   String
  height      Int
  lastName    String
  sex         String
  weight      Int
  workouts_id String[]
}

model workouts {
  id        String              @id @default(auto()) @map("_id") @db.ObjectId
  exercises WorkoutsExercises[]
  name      String
}
